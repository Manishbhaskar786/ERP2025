@model AddEditContactModel
@using ERPack.Web.Models.Customers

<input type="hidden" id="ContactId" name="ContactId" value="@Model.Id" />
<div class="row col-md-12">
    <div class="form-group col-md-6 required">
        <label>@L("FullName")*</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="FullName" id="FullName" value="@Model.FullName" required>
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>@L("Designation")</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="Designation" id="Designation" value="@Model.Designation">
        </div>
    </div>

    <div class="form-group col-md-6 required">
        <label>Email Id*</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="EmailAddress" id="EmailAddress" value="@Model.EmailAddress" required>
        </div>
    </div>
    <div class="form-group col-md-6">
        <label>Contact No.*</label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="ContactNo" id="ContactNo" value="@Model.ContactNo" required placeholder="+910000000000">
        </div>
    </div>
</div>
<style type="text/css">
    .modal-backdrop {
        display: none;
    }
</style>